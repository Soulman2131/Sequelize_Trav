<section id='gigs' class='container'>
  <h1>{{name}} </h1>

  {{#each gigs}}
    <div class='gig'>
      <h3>{{this.title}}</h3>
      <p>{{this.description}}</p>
      <ul>
        <li>Budget: {{this.budget}}</li>
        <li><a href='mailto:{{this.contact_email}}' class='btn btn-reverse'>Apply Now</a></li>
      </ul>
      <div class='tech'>
        <small>Technologies Needed: <span>{{this.technologies}}</span></small>
      </div>
    </div>
  {{else}}
    <p>No gig available</p>
  {{/each}}

</section>